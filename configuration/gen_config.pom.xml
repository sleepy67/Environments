<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.atos.tfc</groupId>
        <artifactId>tfc-dependencies</artifactId>
        <version>1.0.0.0-SNAPSHOT</version>
    </parent>

    <groupId>net.atos.tfc</groupId>
    <artifactId>tfc-config</artifactId>
    <version>1.0.0.0-SNAPSHOT</version>

    <name>gen-config</name>
    <description>TFC Config Generator</description>

    <properties>
        <config.env>LOCAL</config.env>
    </properties>

    <dependencies>
        <dependency>
            <groupId>net.atos.tfc.environments</groupId>
            <artifactId>environment</artifactId>
            <version>${project.version}</version>
            <classifier>${config.env}-env</classifier>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>${config.tmpl.gid}</groupId>
            <artifactId>${config.tmpl.aid}</artifactId>
            <version>${config.tmpl.version}</version>
            <classifier>config</classifier>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${config.tmpl.gid}</groupId>
                                    <artifactId>${config.tmpl.aid}</artifactId>
                                    <version>${config.tmpl.version}</version>
                                    <classifier>config</classifier>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>net.atos.tfc.environments</groupId>
                                    <artifactId>environment</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>${config.env}-env</classifier>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>default-jar</id>
                        <phase/>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <delimiters>
                        <delimiter>${*}</delimiter>
                        <delimiter>{{*}}</delimiter>
                    </delimiters>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>run-ant-rename-template</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <move todir="${project.basedir}/${config.env}_config/">
                                    <fileset dir="${project.basedir}/${config.env}_config/">
                                        <include name="**/*.tmpl"/>
                                    </fileset>
                                    <mapper>
                                        <mapper type="regexp" from="(.*)\.tmpl" to="\1"/>
                                    </mapper>
                                </move>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>config</directory>
                <targetPath>${project.basedir}/${config.env}_config</targetPath>
                <filtering>true</filtering>
            </resource>
        </resources>
        <filters>
            <filter>${config.env}_environment.properties</filter>
        </filters>
    </build>

</project>
